
@model IEnumerable<Testing.Models.Allocation>

@{
    ViewBag.Title = "Exception";
}
<script src="~/Content/SlickGrid-master/plugins/slick.autotooltips.js" type="text/javascript"></script>


<div class="PageHeader">
    Exception Management Verification
</div>

<form action="#" method="post">

    <table class="Layout" id="tblAllocation" cellpadding="0" cellspacing="0">
        <tr>
            <td class="pagecontent">
                <div class="PlaceHolder" id="GridDiv">
                    <table class="tableLayout">
                        <tr>
                            <td></td>
                        </tr>
                        <tr>
                            <td>

                                <div id="grdAllocation" class="GridContainer" style="height: 100%;">

                                </div>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <br />
                                <input type="button" class="inputButton" value="Pass" id="pass"
                                       onclick="PassException()" />
                                <a id="viewdetailsLink" href="~/Allocation/Edit"
                                   onclick="PassException()"></a>
                                <input type="button" class="inputButton" value="Fail" id="fail"
                                       onclick="FailException()" />
                                <a id="viewdetailsLink" href="~/Allocation/Edit"
                                   onclick="FailException()"></a>
                                <input type="button" class="inputButton" value="Set as N/A" id="na"
                                       onclick="NAException()" />
                                <a id="viewdetailsLink" href="~/Allocation/Edit"
                                   onclick="NAException()"></a>
                                <input type="button" class="inputButton" value="Query Tester" id="querytester"
                                       onclick="QueryTesterException()" />
                                <a id="viewdetailsLink" href="~/Allocation/Edit"
                                   onclick="QueryTesterException()"></a>

                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
</form>


<div id="AllocationDetailsdialog"
     style="overflow: hidden;"></div>



<script type="text/javascript">
    var AllocationUrl = '@Url.Action("GetException", "Allocation")';
    var UpdateException = '@Url.Action("UpdateException", "Allocation")';
</script>


<script src="~/Content/Scripts/Allocation/Exception.js"
        type="text/javascript"></script>