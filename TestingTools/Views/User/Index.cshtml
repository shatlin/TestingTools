@model IEnumerable<Testing.Models.User>

@{
    ViewBag.Title = "Manage Users";
}

<div class="PageHeader">
    Manage Users
</div>
            <table style="width:100%;border:1px solid grey;" cellpadding="0" cellspacing="0">
                <tr>
                    <th class="TableHeader">
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th class="TableHeader">
                        @Html.DisplayNameFor(model => model.Team.TeamName)
                    </th>
                    <th class="TableHeader">Edit|Details|Delete</th>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr class="TableRow">
                        <td class="TableCell">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td class="TableCell">
                            @Html.DisplayFor(modelItem => item.Team.TeamName)
                        </td>
                        <td style="font-weight:normal">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "TableLinks" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "TableLinks" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "TableLinks" })
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3" style="text-align:left;padding-left:5px;">@Html.ActionLink("Add New User", "Create", null, new { @class = "ActionLinks" })</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

            </table>

 




