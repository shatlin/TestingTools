@model SynergyAfrica.Models.ErrorModel
@using SynergyAfrica.Infrastructure.Helpers;

<table class="ContentFormHolder">
    <tr>
        <td class="pagecontent">
            <table>
                <tr>
                    <td class="main-form">
                        <div class="alignCenter">
                           <p class="ErrorHeader">
                                @Model.ErrorTitle</p>
                        </div>
                        <div class="menucontent">
                            <br />
                            <br />
                            @if (Model.ExceptionDetail != null)
                            {
                                <p class="ErrorMessageHeader">
                                    Error Details:</p><br />
                                <p class="ErrorMessage">@Model.ExceptionDetail.Message</p> 
                            }
                        </div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
