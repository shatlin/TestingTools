<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body style="font-family: 'Trebuchet MS',verdana;">
    <table cellpadding="0" cellspacing="0" style="height: 100%; width: 100%; position: absolute;
        top: 0; bottom: 0; left: 0; right: 0;">
        <tr>
            <!-- Temporary page to host the links till the link is created in BI Portal -->
            <td style="height: 10px; color: White; vertical-align: top;" bgcolor="#22513c">
                <table width="100%" >
                    <tr>
                        <td width="20%"></td>
                        <td width="25%">
                            @Html.ActionLink("Manage Debtor", "Index", "Debtor", null,
        new { @style = "color:white;text-decoration: none;font-size:15px;" })
                        </td>
                        <td width="25%">@Html.ActionLink("My Authorizations", "Index", "Escalation", null,
        new { @style = "color:white;text-decoration: none;font-size:15px;" })
                        </td>
                        <td width="30%">@Html.ActionLink("Process Charges", "Index", "ChargeProcessor", null,
             new { @style = "color:white;text-decoration: none;font-size:15px;" })
                        </td>
                        <td align="right">
                        </td>
                        <td width="10%"></td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td width="100%" valign="top" bgcolor="white">
                @RenderBody()
            </td>
        </tr>
    </table>
</body>
</html>
